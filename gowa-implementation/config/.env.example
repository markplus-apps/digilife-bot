# GOWA Configuration File
# Copy this to .env and fill in your values

# ========== APPLICATION SETTINGS ==========
APP_PORT=3000
APP_HOST=0.0.0.0
APP_DEBUG=false
APP_OS=DigiLife-Bot
APP_BASE_PATH=/

# ========== DATABASE SETTINGS ==========
# Option 1: PostgreSQL (recommended for production with existing infrastructure)
DB_URI=postgres://postgres:postgres@localhost:5432/digilife?sslmode=disable

# Option 2: SQLite (if you don't have PostgreSQL)
# DB_URI=file:storages/whatsapp.db?_foreign_keys=on

# ========== WEBHOOK SETTINGS ==========
# URL where GOWA will send incoming messages
WHATSAPP_WEBHOOK=http://localhost:3005/api/webhook/gowa

# Secret key for webhook HMAC verification
WHATSAPP_WEBHOOK_SECRET=your-super-secret-key-change-this

# Which events to forward (comma-separated)
# Options: message,message.reaction,message.revoked,message.edited,message.ack,message.deleted,group.participants,group.joined,newsletter.joined,newsletter.left,newsletter.message,newsletter.mute,call.offer
WHATSAPP_WEBHOOK_EVENTS=message,message.ack,call.offer

# Skip TLS verification (only for development/testing with self-signed certs)
WHATSAPP_WEBHOOK_INSECURE_SKIP_VERIFY=false

# ========== AUTO FEATURES ==========
# Automatically mark incoming messages as read
WHATSAPP_AUTO_MARK_READ=true

# Automatically download media from incoming messages
WHATSAPP_AUTO_DOWNLOAD_MEDIA=true

# Automatically reject incoming calls
WHATSAPP_AUTO_REJECT_CALL=true

# Auto-reply message (optional)
# WHATSAPP_AUTO_REPLY=

# Presence on connect (available, unavailable, or none)
WHATSAPP_PRESENCE_ON_CONNECT=unavailable

# ========== SECURITY SETTINGS ==========
# Enable account validation
WHATSAPP_ACCOUNT_VALIDATION=true

# Basic authentication for dashboard (username:password)
APP_BASIC_AUTH=admin:changeme

# Trusted proxies (for reverse proxy setups)
# APP_TRUSTED_PROXIES=0.0.0.0/0

# ========== OPTIONAL INTEGRATIONS ==========

# Chatwoot Integration (optional)
# CHATWOOT_ENABLED=false
# CHATWOOT_URL=https://app.chatwoot.com
# CHATWOOT_API_TOKEN=your-api-token
# CHATWOOT_ACCOUNT_ID=1
# CHATWOOT_INBOX_ID=1
# CHATWOOT_IMPORT_MESSAGES=false
# CHATWOOT_DAYS_LIMIT_IMPORT_MESSAGES=3

# ========== LOGGING ==========
# Enable enhanced debug logging (use for troubleshooting)
# APP_DEBUG=true
